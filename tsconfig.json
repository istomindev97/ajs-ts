{
  "compilerOptions": {
    "target": "ES6", // Уровень ECMAScript для компиляции
    "module": "CommonJS", // Используемый модульный формат
    "lib": ["ES6", "DOM"], // Библиотеки, доступные в проекте
    "strict": true, // Включает строгую типизацию
    "esModuleInterop": true, // Поддержка импорта CommonJS модулей
    "skipLibCheck": true, // Пропуск проверки типов в библиотечных файлах
    "forceConsistentCasingInFileNames": true, // Строгое соответствие регистра в именах файлов
    "baseUrl": ".", // Базовая директория для разрешения путей
    "paths": {
      "@app/*": ["src/*"], // Псевдонимы для путей
      "@tests/*": ["tests/*"]
    },
    "outDir": "./dist", // Директория для собранных файлов
    "types": ["node", "jest"] // Типы для Node.js и Jest
  },
  "include": [
    "src/**/*.ts", // Включаем файлы из src
    "tests/**/*.ts" // Включаем тестовые файлы
  ],
  "exclude": [
    "node_modules", // Исключаем node_modules
    "dist" // Исключаем скомпилированные файлы
  ]
}